# Activer le moteur de réécriture
RewriteEngine On

# Rediriger vers index.html (page mot de passe) SAUF index-full.html et fichiers statiques
RewriteCond %{REQUEST_URI} !\.(jpg|jpeg|png|gif|svg|css|js|pdf|ico|webp|woff|woff2|ttf|eot|html)$ [NC]
RewriteCond %{REQUEST_URI} !^/index\.html$
RewriteCond %{REQUEST_URI} !^/index-full\.html$
RewriteCond %{REQUEST_URI} !^/$
RewriteRule ^(.*)$ /index.html [L]
